<h1>Shopping List for <%= current_user.name %></h1>
<div>
  <p>Amount of food items to buy: <%= current_user.foods.uniq.length %></p>
  <p>Total value of food needed: $<%= @recipe_foods.map { |recipe| recipe.food.price * recipe.quantity }.sum %></p>
</div>

<div>
  <table>
    <thead>
      <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @recipe_foods.each do |recipe| %>
        <tr>
          <td><%= recipe.food.name %></td>
          <td><%= recipe.quantity %></td>
          <td>$<%= recipe.food.price * (recipe.quantity || 0) %></td>
        </tr>
      <% end %>
</div>
